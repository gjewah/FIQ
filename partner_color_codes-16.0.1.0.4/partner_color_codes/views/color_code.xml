<?xml version="1.0"?>
<odoo>

    <record id="color_code_view_search" model="ir.ui.view">
        <field name="name">color.code.search</field>
        <field name="model">color.code</field>
        <field name="arch" type="xml">
            <search>
               <field name="reference"/>
               <field name="name"/>
               <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="color_code_view_form" model="ir.ui.view">
        <field name="name">color.code.form</field>
        <field name="model">color.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="reference" placeholder="reference" required="1"/>
                        <field name="name" widget="color"/>
                        <field name="sequence"/>
                        <field name="active" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Rules">
                            <field name="rule_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="domain"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <field name="domain" widget="domain" options="{'model': 'res.partner'}" style="min-height:200px !important;"/>
                                        <field name="name" required="1" placeholder="rule explanation"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="color code explanation"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="color_code_view_tree" model="ir.ui.view">
        <field name="name">color.code.tree</field>
        <field name="model">color.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="reference"/>
                <field name="name" widget="color"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>
    <record id="color_code_action" model="ir.actions.act_window">
        <field name="name">Color Codes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">color.code</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" eval="color_code_view_search"/>
    </record>

</odoo>
