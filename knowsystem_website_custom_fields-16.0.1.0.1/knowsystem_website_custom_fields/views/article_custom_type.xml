<?xml version="1.0"?>
<odoo>

    <record id="article_custom_type_view_form" model="ir.ui.view">
        <field name="name">article.custom.type.form.website</field>
        <field name="model">article.custom.type</field>
        <field name="inherit_id" ref="knowsystem_custom_fields.article_custom_type_view_form"/>
        <field name="arch" type="xml">
            <page name="description" position="before">
                <page string="Website and Portal">
                    <group name="settings" position="inside">
                        <field name="website_published"/>
                        <field name="website_id"
                               options="{'no_create_edit': 1, 'no_quick_create': 1}"
                               groups="website.group_multi_website"
                        />
                    </group>
                </page>
            </page>
        </field>
    </record>
    <record id="article_custom_type_view_tree" model="ir.ui.view">
        <field name="name">article.custom.type.tree.website</field>
        <field name="model">article.custom.type</field>
        <field name="inherit_id" ref="knowsystem_custom_fields.article_custom_type_view_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="website_published"/>
            </field>
        </field>
    </record>    
    <record id="article_custom_type_publish" model="ir.actions.server">
        <field name="name">Website Publish</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="knowsystem_custom_fields.model_article_custom_type"/>
        <field name="binding_model_id" ref="knowsystem_custom_fields.model_article_custom_type"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    records.write({"website_published": True})
        </field>
    </record>
    <record id="article_custom_type_ubpublish" model="ir.actions.server">
        <field name="name">Website Unpublish</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="knowsystem_custom_fields.model_article_custom_type"/>
        <field name="binding_model_id" ref="knowsystem_custom_fields.model_article_custom_type"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    records.write({"website_published": False})
        </field>
    </record>

</odoo>
