<?xml version="1.0"?>
<odoo>

    <record id="knowsystem_article_revision_view_search" model="ir.ui.view">
        <field name="name">knowsystem.article.revision.search</field>
        <field name="model">knowsystem.article.revision</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <group expand="0" string="Group By">
                    <filter string="Article" name="by_articles" context="{'group_by':'article_id'}"/>
                    <filter string="Revision Date" name="by_dates" context="{'group_by':'change_datetime'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="knowsystem_article_revision_view_form_viewer" model="ir.ui.view">
        <field name="name">knowsystem.article.revision.form.viewer</field>
        <field name="model">knowsystem.article.revision</field>
        <field name="arch" type="xml">
            <form js_class="knowsystem_form" class="o_knowsystem_form" create="0" delete="0" edit="0">
                <header>
                    <button name="action_recover_this_revision"
                            type="object"
                            class="btn btn-primary"
                            string="Restore this revision"
                            confirm="Please confirm that you consider this revision as the main article version"
                    />
                </header>
                <div class="w-100">
                    <div class="row">
                        <h1><field name="name" placeholder="Article Title"/></h1>
                    </div>
                    <group>
                        <field name="article_id"/>
                        <field name="change_datetime"/>
                        <field name="section_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                </div>
                <notebook>
                    <page name="article_content" string="Previous Content">
                        <div class="w-100 mb4">
                            <field name="kanban_manual_description" placeholder="preview text" widget="text"/>
                        </div>
                        <field name="description_arch" widget="knowsystemEditor" options="{'allowCommandVideo': true}"/>
                    </page>
                    <page string="Tech" invisible="1">
                        <!-- we apply the widget text to avoid any manipulations of the HTML field -->
                        <field name="description" readonly="0" widget="text"/>
                        <field name="editor_type"/>
                    </page>
                    <page name="knowsystem_attachments" string="Previous Attachments">
                        <div class="w-100 mt16">
                            <field name="attachment_ids" widget="many2many_binary" string="Attach a file" class="w-100"/>
                        </div>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="knowsystem_article_revision_view_tree" model="ir.ui.view">
        <field name="name">knowsystem.article.revision.tree</field>
        <field name="model">knowsystem.article.revision</field>
        <field name="arch" type="xml">
            <tree delete="1" create="0" edit="0">
                <field name="name"/>
                <field name="article_id"/>
                <field name="change_datetime"/>
            </tree>
        </field>
    </record>
    <record id="knowsystem_article_revision_action" model="ir.actions.act_window">
        <field name="name">Revisions</field>
        <field name="res_model">knowsystem.article.revision</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" eval="knowsystem_article_revision_view_search"/>
        <field name="context">{'search_default_by_articles': 1}</field>
    </record>

</odoo>
