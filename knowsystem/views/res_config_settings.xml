<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.knowsystem</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="KnowSystem" string="KnowSystem" data-key="knowsystem" name="knowsystem">
                    <h2>Extra features</h2>
                    <div class="row mt16 o_settings_container" id="knowsystem_extra_options">
                        <div name="website_know_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="extra_2" class="o_setting_left_pane">
                                <field name="module_knowsystem_website"/>
                            </div>
                            <div name="extra_2" class="o_setting_right_pane">
                                <label for="module_knowsystem_website"/>
                                <div name="extra_2_hint" class="text-muted">
                                    Turn on to publish articles for portal users and website visitors. The tool
                                    <a href="https://apps.odoo.com/apps/modules/16.0/knowsystem_website/">
                                        KnowSystem Website and Portal
                                    </a> (40 Euros extra) is required
                                </div>
                            </div>
                        </div>
                        <div name="docuumentation_builder_option" class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('module_knowsystem_website', '=', False)]}">
                            <div name="docuumentation_builder_option_1" class="o_setting_left_pane">
                                <field name="module_documentation_builder"/>
                            </div>
                            <div name="docuumentation_builder_option_2" class="o_setting_right_pane">
                                <label for="module_documentation_builder"/>
                                <div name="extra_3_hint" class="text-muted">
                                    Turn on to build documentation based on KnowSystem articles. The tool
                                    <a href='https://apps.odoo.com/apps/modules/16.0/documentation_builder/'>
                                        Documentation Builder
                                    </a> (99 Euros extra) is required
                                </div>
                            </div>
                        </div>
                        <div name="website_custom_field_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="extra_3" class="o_setting_left_pane">
                                <field name="module_knowsystem_custom_fields"/>
                            </div>
                            <div name="extra_3" class="o_setting_right_pane">
                                <label for="module_knowsystem_custom_fields"/>
                                <div name="extra_3_hint" class="text-muted">
                                    Turn on to prepare custom fields for articles. The tool
                                    <a href='https://apps.odoo.com/apps/modules/16.0/knowsystem_custom_fields/'>
                                        KnowSystem: Custom Fields
                                    </a> (48 Euros extra) is required
                                </div>
                            </div>
                        </div>
                        <div name="website_custom_field_portal_option" class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': ['|', ('module_knowsystem_website', '=', False), ('module_knowsystem_custom_fields', '=', False)]}">
                            <div name="extra_4" class="o_setting_left_pane">
                                <field name="module_knowsystem_website_custom_fields"/>
                            </div>
                            <div name="extra_4" class="o_setting_right_pane">
                                <label for="module_knowsystem_website_custom_fields"/>
                                <div name="extra_3_hint" class="text-muted">
                                    Turn on to show article custom fields for portal users and website visitors. The tool
                                    <a href='https://apps.odoo.com/apps/modules/16.0/knowsystem_website_custom_fields/'>
                                        Custom Fields for Website and Portal
                                    </a> is required (free if KnowSystem Website and Portal and KnowSystem: Custom
                                    Fields are installed)
                                </div>
                            </div>
                        </div>
                        <div name="eshop_know_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="eshop_know_option_1" class="o_setting_left_pane">
                                <field name="module_knowsystem_eshop"/>
                            </div>
                            <div name="eshop_know_option_2" class="o_setting_right_pane">
                                <label for="module_knowsystem_eshop"/>
                                <div name="eshop_know_option_hint" class="text-muted">
                                    Turn on to establish direct links between Odoo products and KnowSystem articles to automatically generate frequently asked questions on eShop pages. The tool
                                    <a href="https://apps.odoo.com/apps/modules/16.0/knowsystem_eshop/">
                                        KnowSystem: eCommerce FAQ
                                    </a> (28 Euros extra) is required
                                </div>
                            </div>
                        </div>
                        <div name="multilang_know_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="extra_5" class="o_setting_left_pane">
                                <field name="module_knowsystem_multilang"/>
                            </div>
                            <div name="extra_5" class="o_setting_right_pane">
                                <label for="module_knowsystem_multilang"/>
                                <div name="extra_5_hint" class="text-muted">
                                    Turn on to translate articles, sections and tags to available in the databases languages. The tool
                                    <a href="https://apps.odoo.com/apps/modules/16.0/knowsystem_multilang/">
                                        KnowSystem Multi Languages
                                    </a> (10 Euros extra) is required
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Settings</h2>
                    <div class="row mt16 o_settings_container" id="knowsystem_quick_search">
                        <div name="editor_type_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="editor_type_option_1" class="o_setting_left_pane"/>
                            <div name="editor_type_option_2" class="o_setting_right_pane w-100">
                                <label for="knowsystem_editor_type"/>
                                <div name="mode_option_hint" class="text-muted">
                                    Choose a default editor that will be applied to all newly created articles
                                </div>
                                <group class="w-100 mt8">
                                    <field name="knowsystem_editor_type" colspan="2" class="w-100" nolabel="1"/>
                                </group>
                            </div>
                        </div>
                        <div name="tours_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="tours_option_1" class="o_setting_left_pane">
                                <field name="group_knowsystem_tours_option"/>
                            </div>
                            <div name="tours_option_2" class="o_setting_right_pane">
                                <label for="group_knowsystem_tours_option"/>
                                <div name="tours_option_hint" class="text-muted">
                                    Organize articles in tours and control users' learning progress
                                </div>
                            </div>
                        </div>
                        <div name="model_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="model_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_models_option"/>
                            </div>
                            <div name="mode_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_models_option"/>
                                <div name="mode_option_hint" class="text-muted">
                                    Turn on the quick access to KnowSystem articles from Odoo objects
                                </div>
                            </div>
                        </div>
                        <div name="composer_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="composer_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_composer_option"/>
                            </div>
                            <div name="composer_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_composer_option"/>
                                <div name="composer_option_hint" class="text-muted">
                                    Select KnowSystem articles in email composers to add references in sent messages
                                </div>
                                <div class="mt8" attrs="{'invisible': [('module_knowsystem_website', '=', False)]}">
                                    <label for="knowsystem_share_link_type"/>
                                    <field name="knowsystem_share_link_type"/>
                                    <div name="shared_url_option" class="text-muted">
                                        The option defines how article links should be shared. <i>Internal URL</i> is the link to the KnowSystem backend. <i>Website URL</i> is the link to the KnowSystem frontend (portal). <i>Shared with token</i> is the link to the KnowSystem frontend (portal) without security checks
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div name="activity_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="activity_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_activity_option"/>
                            </div>
                            <div name="activity_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_activity_option"/>
                                <div name="activity_option_hint" class="text-muted">
                                    Reference KnowSystem articles in Odoo activities
                                </div>
                            </div>
                        </div>
                        <div name="knowsystem_systray_option_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="knowsystem_systray_option_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_systray_option"/>
                            </div>
                            <div name="knowsystem_systray_option_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_systray_option"/>
                                <div name="knowsystem_systray_option_option_hint" class="text-muted">
                                    Add the icon for quick articles' search to the Odoo systray (near activities and messaging)
                                </div>
                            </div>
                        </div>
                        <div name="knowsystem_create_from_activities_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="knowsystem_create_from_activities_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_create_from_activities"/>
                            </div>
                            <div name="knowsystem_create_from_activities_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_create_from_activities"/>
                                <div name="knowsystem_create_from_activities_option_hint" class="text-muted">
                                    If turned on, the option will add the button to the activities' top entry to quickly create new articles
                                </div>
                            </div>
                        </div>
                        <div name="knowsystem_no_titles_printed_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="knowsystem_no_titles_printedn_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_no_titles_printed"/>
                            </div>
                            <div name="knowsystem_no_titles_printed_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_no_titles_printed"/>
                                <div name="knowsystem_no_titles_printed_option_hint" class="text-muted">
                                    Do not include titles of articles in their PDF versions (print only their content)
                                </div>
                            </div>
                        </div>
                        <div name="kms_layout_option" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="o_setting_left_pane" class="o_setting_left_pane">
                                <field name="knowsystem_custom_layout"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="knowsystem_custom_layout"/>
                                <span class="ml8 fa fa-lg fa-building-o"  title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Turn on the custom layout for articles' printing. Otherwise, the standard company layout will be used
                                </div>
                                <div class="content-group w-100">
                                    <group attrs="{'invisible': [('knowsystem_custom_layout', '=', False)]}" class="w-100 mt8">
                                        <field name="external_layout_knowsystem_id" domain="[('type','=', 'qweb')]" colspan="2" class="oe_inline w-100" nolabel="1"/>
                                    </group>
                                    <div>
                                        <button name="edit_kms_report" 
                                                string="Edit Report" 
                                                type="object"
                                                class="oe_link"
                                                icon="fa-arrow-right"
                                        />
                                        <button name="edit_kms_layout_external_header" 
                                                string="Edit Layout" 
                                                type="object"
                                                class="oe_link"
                                                icon="fa-arrow-right"
                                                attrs="{'invisible': ['|', ('knowsystem_custom_layout', '=', False), ('external_layout_knowsystem_id', '=', False)]}"
                                        />
                                        <button name="edit_kms_paperformat" 
                                                string="Edit Paper Format" 
                                                type="object"
                                                class="oe_link"
                                                icon="fa-arrow-right"
                                        />
                                    </div>
                                </div>
                            </div> 
                        </div> 
                    </div>
                    <h2>Mass actions</h2>
                    <div class="row mt16 o_settings_container" id="knowsystem_mass_actions">
                        <div name="knowsystem_export_option_div" class="col-xs-12 col-md-6 o_setting_box">
                            <div name="knowsystem_export_option_1" class="o_setting_left_pane">
                                <field name="knowsystem_export_option"/>
                            </div>
                            <div name="knowsystem_export_option_2" class="o_setting_right_pane">
                                <label for="knowsystem_export_option"/>
                                <div name="knowsystem_export_option" class="text-muted">
                                    Let users export articles
                                </div>
                            </div>
                        </div>
                        <field name="knowsystem_ir_actions_server_ids" class="w-100" context="{'default_model_id': knowsystem_ir_actions_server_default_model_id}"/>
                        <field name="knowsystem_ir_actions_server_ids_str" invisible="1"/>
                        <field name="knowsystem_ir_actions_server_default_model_id" invisible="1"/>
                    </div>
                    <div id="kms_last_div"/>
                </div>
            </xpath>
        </field>
    </record>
    <record id="res_config_settings_knowsystem_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'knowsystem'}</field>
    </record>

</odoo>
