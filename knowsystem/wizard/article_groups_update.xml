<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="article_groups_update_form_view" model="ir.ui.view">
        <field name="name">article.groups.update.view</field>
        <field name="model">article.groups.update</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="article_ids" widget="many2many_tags" invisible="1"/>
                    <field name="add_user_group_ids" widget="many2many_tags"/>
                    <field name="remove_user_group_ids" widget="many2many_tags"/>
                    <field name="add_edit_user_group_ids" widget="many2many_tags"/>
                    <field name="remove_edit_user_group_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>
    <record id="knowsystem_update_groups_action" model="ir.actions.act_window">
        <field name="name">Update groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">article.groups.update</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="knowsystem.article_groups_update_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
