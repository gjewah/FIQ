<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="article_search_form_view" model="ir.ui.view">
        <field name="name">article.search.form.view</field>
        <field name="model">article.search</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="tag_ids" widget="many2many_tags" options="{'no_quick_create': 1, 'no_create_edit': 1, 'color_field': 'color'}"/>
                    <field name="section_ids" widget="many2many_tags" options="{'no_quick_create': 1, 'no_create_edit': 1}"/>
                    <label for="search"/>
                    <div>
                        <field name="search" style="width:96%;"/>
                        <a href="#" style="width:4%;"><i class="fa fa-search"> </i></a>
                    </div>
                    <field name="no_selection" invisible="1"/>
                </group>
                <notebook>
                    <page string="Articles">
                        <field name="article_ids" widget="knowsystem_many2many" readonly="1" context="{'form_view_ref': 'knowsystem.knowsystem_article_view_quick_search'}">
                            <kanban>
                                <field name="name"/>
                                <field name="kanban_description"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click">
                                            <div class="oe_kanban_content">
                                                <div class="o_kanban_record_title">
                                                    <a attrs="{'invisible': [('parent.no_selection', '=', True)]}" class="fa fa-lg fa-plus-circle jstr-pull-right" href="#"> </a>
                                                    <strong>
                                                        <field name="name"/>
                                                    </strong>
                                                </div>
                                                <div class="knowsystem-article-search-break-word">
                                                    <i><field name="kanban_description"/>... </i>
                                                </div>
                                            </div>
                                            <div class="oe_clear"/>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                    <page string="Selected Articles" attrs="{'invisible': [('no_selection', '=', True)]}">
                        <field name="selected_article_ids" widget="knowsystem_many2many" readonly="1" context="{'form_view_ref': 'knowsystem.knowsystem_article_view_quick_search'}">
                            <kanban>
                                <field name="name"/>
                                <field name="kanban_description"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click">
                                            <div class="oe_kanban_content">
                                                <div class="o_kanban_record_title">
                                                    <a class="fa fa-lg fa-times jstr-pull-right" type="delete"> </a>
                                                    <strong>
                                                        <field name="name"/>
                                                    </strong>
                                                </div>
                                                <div class="knowsystem-article-search-break-word">
                                                    <i><field name="kanban_description"/>... </i>
                                                </div>
                                            </div>
                                            <div class="oe_clear"/>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

</odoo>
