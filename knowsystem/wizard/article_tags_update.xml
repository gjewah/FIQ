<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="article_tags_update_form_view" model="ir.ui.view">
        <field name="name">article.tags.update.view</field>
        <field name="model">article.tags.update</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="article_ids" widget="many2many_tags" invisible="1"/>
                    <field name="to_add_tag_ids" widget="many2many_tags"/>
                    <field name="to_remove_tag_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>
    <record id="knowsystem_update_tags_action" model="ir.actions.act_window">
        <field name="name">Update tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">article.tags.update</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="knowsystem.article_tags_update_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
