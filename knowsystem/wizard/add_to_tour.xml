<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="add_to_tour_form_view" model="ir.ui.view">
        <field name="name">add.to.tour.form.view</field>
        <field name="model">add.to.tour</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="article_ids" widget="many2many_tags" invisible="1"/>
                    <field name="tour_id"/>
                </group>
            </form>
        </field>
    </record>
    <record id="knowsystem_add_to_tour_action" model="ir.actions.act_window">
        <field name="name">Add to tour</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">add.to.tour</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="knowsystem.add_to_tour_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
