<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="knowsystem.KnowSystemFormViewDialog" owl="1">
        <Dialog size="props.size" title="props.title" withBodyPadding="false" modalRef="modalRef">
            <View t-props="viewProps"/>
            <t t-set-slot="footer"/>      
        </Dialog>
    </t>
    <t t-name="knowsystem.KnowSystemFormViewDialog.buttons" t-inherit-mode="primary" t-inherit="web.FormView.Buttons" owl="1">
        <xpath expr="//div[contains(@class, 'o_form_buttons_edit')]" position="replace">
            <div t-if="model.root.isInEdition" class="o_form_buttons_edit">
                <t t-if="canCreate">
                    <button class="btn btn-primary o_form_button_save" t-on-click="() => this.saveButtonClicked({kmsAction: 'add'})">Update Body</button>
                    <button class="btn btn-primary o_form_button_save" t-on-click="() => this.saveButtonClicked({kmsAction: 'share'})">Share URL</button>
                    <button t-if="props.info.pdfAttach" class="btn btn-primary o_form_button_save" t-on-click="() => this.saveButtonClicked({kmsAction: 'attach'})">Attach PDF</button>
                </t>
                <button class="btn btn-secondary o_form_button_cancel" data-hotkey="j" t-on-click.stop="discard">Close</button>
                <button t-if="!canCreate and props.context.editorRights" class="btn btn-secondary o_form_button_save" t-on-click="() => this.saveButtonClicked({newOpen: true})">Create new</button>
            </div>
        </xpath>
    </t>

</templates>
