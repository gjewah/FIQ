<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="knowsystem.KnowSystemKanbanView" t-inherit="web.KanbanView" t-inherit-mode="primary" owl="1">
        <xpath expr="//Layout" position="attributes">
            <attribute name="className">'kms-content'</attribute>
        </xpath>
    </t>
    <t t-name="knowsystem.KnowSystemKanbanViewButtons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="primary" owl="1">
        <xpath expr="//button[hasclass('o-kanban-button-new')]" position="after">
            <button type="button" class="btn btn-secondary" t-on-click="() => this.createFromTeplate()">
                Create from template
            </button>
        </xpath>
    </t>

</templates>
