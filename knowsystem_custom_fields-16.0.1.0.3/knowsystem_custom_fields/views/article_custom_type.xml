<?xml version="1.0"?>
<odoo>

    <record id="article_custom_type_view_search" model="ir.ui.view">
        <field name="name">article.custom.type.search</field>
        <field name="model">article.custom.type</field>
        <field name="arch" type="xml">
            <search>
               <field name="name"/>
               <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    <record id="article_custom_type_view_form" model="ir.ui.view">
        <field name="name">article.custom.type.form</field>
        <field name="model">article.custom.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="type" class="w-100"/></h1>
                    </div>
                    <div class="w-100">
                        <field name="parent_id" placeholder="parent type"/>
                    </div>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                        <page name="settings" string="Misc">
                            <group>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="article_custom_type_view_tree" model="ir.ui.view">
        <field name="name">article.custom.type.tree</field>
        <field name="model">article.custom.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="article_custom_type_action" model="ir.actions.act_window">
        <field name="name">Article Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">article.custom.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" eval="article_custom_type_view_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to add a new article type</p>
        </field>
    </record>
    <menuitem id="menu_article_types"
              name="Types"
              action="article_custom_type_action"
              parent="knowsystem.menu_knowsystem_conf"
              sequence="25"
    />

</odoo>
