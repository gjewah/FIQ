<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Trigger the wizard to update type -->
        <record id="knowsystem_article_update_type" model="ir.actions.server">
            <field name="name">Update type</field>
            <field name="model_id" ref="knowsystem.model_knowsystem_article"/>
            <field name="state">code</field>
            <field name="code">
action = env.ref("knowsystem_custom_fields.knowsystem_update_type_action").sudo().read()[0]
            </field>
            <field name="groups_id" eval="[(4, ref('knowsystem.group_knowsystem_editor'))]"/>
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>
