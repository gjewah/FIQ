<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="faqPopup">
        <div class="col-lg-12 col-md-12 col-xs-12 col-12">
            <a class="knowsystem-website-pull-right" href="#" id="close_faq"><i class="fa fa-times"> </i></a>
        </div>
        <hr/>
        <div id="faq_body">
            <div class="col-lg-12 col-md-12 col-xs-12 col-12" >
                <t t-if="article_ids and article_ids.length != 0">
                    <section class="s_faq_collapse pt32 pb32 o_colored_level" data-snippet="s_faq_collapse" data-name="Accordion" style="background-image: none;">
                        <div class="container">
                            <div id="faqAccordion" class="accordion" role="tablist">
                                <t t-foreach="article_ids" t-as="article_id">
                                    <div class="card bg-white" data-name="Item">
                                        <a href="#" role="tab" data-bs-toggle="collapse" aria-expanded="false" class="collapsed card-header" t-attf-data-bs-target="#ks#{article_id.id}">
                                            <t t-out="article_id.name"/>
                                        </a>
                                        <div class="collapse" data-bs-parent="#faqAccordion" role="tabpanel" t-attf-id="ks#{article_id.id}">
                                            <div class="card-body">
                                                <div t-out="markup_utils(article_id.body)"/>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>
                <t t-else="">
                    No FAQ found
                </t>
            </div>
        </div>
    </t>

</templates>
