<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record id="project_task_view_kanban" model="ir.ui.view">
        <field name="name">project.task.kanban.numbering</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="priority">9999</field>
        <field name="arch" type="xml">
             <xpath
                expr="//span[@t-if='record.un_reference.raw_value']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="before">
                <br t-if="record.un_reference.raw_value" />
                <span t-if="record.un_reference.raw_value"><field
                        name="un_reference"
                    /></span>
                <br t-if="record.un_reference.raw_value" />
            </xpath>
        </field>
    </record>

     <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.form.numbering</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="priority">9999</field>
        <field name="arch" type="xml">
            <field name="un_reference" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="name" position="before">
                <field
                    name="un_reference"
                    class="o_task_name text-truncate"
                    style="width:auto !important;padding:2px 9px 2px 0px !important;display:contents; font-weight: 400 !important;"
                />
                <span class="p-2" />
            </field>
        </field>
    </record>
</odoo>
